    </TextView>

    <AutoCompleteTextView
        android:id="@+id/autComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

    </AutoCompleteTextView>


</LinearLayout>